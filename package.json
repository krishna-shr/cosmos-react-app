{
    "name": "react_app",
    "version": "1.0.0",
    "scripts": {
        "start-local:client": "webpack serve --config ./config/webpack/development/webpack.dev.client.js",
        "start-local:server": "nodemon src/server/app.ts",
        "start": "npm-run-all --parallel start-local:*",
        "build-prod:client": "webpack --config ./config/webpack/production/webpack.prod.client.js",
        "build-prod:server": "webpack --config ./config/webpack/production/webpack.prod.server.js",
        "build-prod": "run-s build-prod:**",
        "serve:server": "node dist/server/* node --exec \"node --inspect dist/server/main.js\"",
        "test": "jest --silent",
        "test-watch": "jest --silent --watch",
        "test-report": "jest --silent --coverage",
        "lint:staged": "lint-staged",
        "lint": "eslint src/**/*.tsx --fix && src/**/*.ts --fix",
        "prettier": "prettier --write src"
    },
    "dependencies": {
        "axios": "0.19.2",
        "cors": "2.8.5",
        "express": "4.17.1",
        "helmet": "3.22.0",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-helmet": "6.1.0",
        "react-redux": "7.2.6",
        "react-router-dom": "6.3.0",
        "redux": "4.1.2",
        "redux-devtools-extension": "2.13.9",
        "redux-thunk": "2.4.1",
        "styled-components": "^5.3.6"
    },
    "devDependencies": {
        "@babel/core": "7.17.9",
        "@babel/plugin-transform-runtime": "7.17.0",
        "@babel/preset-env": "7.16.11",
        "@babel/preset-react": "7.16.7",
        "@svgr/webpack": "6.2.1",
        "@testing-library/jest-dom": "5.16.1",
        "@testing-library/react": "12.1.2",
        "@testing-library/react-hooks": "7.0.1",
        "@testing-library/user-event": "13.5.0",
        "@types/cors": "2.8.6",
        "@types/express": "4.17.6",
        "@types/jest": "27.4.1",
        "@types/multer": "1.4.7",
        "@types/node": "16.11.27",
        "@types/react": "17.0.44",
        "@types/react-dom": "17.0.15",
        "@types/react-redux": "7.1.24",
        "@types/react-router-dom": "5.3.3",
        "@typescript-eslint/eslint-plugin": "5.20.0",
        "@typescript-eslint/parser": "5.20.0",
        "babel-loader": "8.2.5",
        "css-loader": "6.7.1",
        "dotenv": "10.0.0",
        "eslint": "8.13.0",
        "eslint-config-airbnb": "19.0.4",
        "eslint-config-prettier": "8.5.0",
        "eslint-import-resolver-typescript": "2.7.1",
        "eslint-plugin-babel": "5.3.1",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-jsx-a11y": "6.5.1",
        "eslint-plugin-prettier": "4.0.0",
        "eslint-plugin-react": "7.29.0",
        "eslint-plugin-react-hooks": "4.4.0",
        "html-webpack-plugin": "5.5.0",
        "jest": "27.5.1",
        "lint-staged": "11.2.6",
        "morgan": "1.10.0",
        "nodemon": "1.19.4",
        "npm-run-all": "4.1.5",
        "prettier": "2.6.2",
        "react-test-renderer": "17.0.2",
        "redux-devtools-extension": "2.13.9",
        "style-loader": "3.3.1",
        "ts-jest": "27.1.4",
        "ts-loader": "9.2.8",
        "ts-node": "9.1.1",
        "tsconfig-paths-webpack-plugin": "3.5.2",
        "typescript": "4.6.3",
        "webpack": "5.72.0",
        "webpack-cli": "4.10.0",
        "webpack-dev-server": "4.8.1",
        "webpack-merge": "5.8.0",
        "webpack-node-externals": "1.7.2",
        "compression-webpack-plugin": "10.0.0"
    },
    "lint-staged": {
        "src/**/*.{js,ts,jsx,tsx}": [
            "npm run prettier"
        ],
        "*.*": [
            "git add"
        ]
    }
}
